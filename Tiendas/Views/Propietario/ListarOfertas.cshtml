@{
    ViewBag.Title = "Listar contactos";
    Layout = "~/Views/Shared/_Gestion.cshtml";
}

<h2>@ViewBag.Title  </h2>
<table class="table table-bordered table-condensed table-hover table-striped">
    @{
        for (int i = 0; i < 15; i++) {
            <tr>
                <td>Tienda</td>
                <td>Tipo</td>
                <td>Breve</td>
                <td>Precio</td>
                <td>
                    @Html.ActionLink("Ver", "CrearOferta", new {
                        id = ViewBag.Id,
                        fecha = ViewBag.UltimoLogin,
                        idcontacto = i,
                        operacion = "editar"
                    })
                </td>
            </tr>
        }
    }
</table>