<h1>Buscar negocios</h1>
<div class="row">
    <div class="col-md-12">
        <form method="post" action="@Url.Action("loadResults")">
            <div class="input-group">
                <input type="text" id="txtBuscar" name="txtBuscar" class="form-control" placeholder="¿Qué negocio buscas?" />
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
            <br />
            <div class="input-group">
                @foreach (var item in (ViewBag.Etiquetas as Dictionary<string, string>)) {
                    <label for="@item.Key">
                        @item.Value
                    </label>
                    <input type="checkbox" id="@item.Key" />
                }
            </div>
        </form>
    </div>
</div>
