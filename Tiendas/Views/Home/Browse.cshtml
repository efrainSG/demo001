<h1>Buscar negocios</h1>
<div class="row">
    <div class="col-md-12">
        <form>
            <div class="input-group">
                <input type="text" id="txtBuscar" name="txtBuscar" class="form-control" placeholder="¿Qué negocio buscas?" />
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
            <br />
            <div class="input-group">
                @for (int i = 0; i < 10; i++) {
                    <label for="tag@(i)">
                        Tag @i.ToString()
                    </label>
                    <input type="checkbox" id="tag@(i)" />
                }
            </div>
        </form>
    </div>
</div>
