<form class="form-group well" method="post" action="@Url.Action("FormContacto")">
    @Html.ValidationSummary(true)
    <h4 class="text-primary">Inicia sesión<small><br />... Y administra tus tiendas</small></h4>
    <div class="row">
        <div class="col-md-12 input-group">
            <span class="input-group-addon" id="addonNombre"><i class="glyphicon glyphicon-user"></i></span>
            @Html.TextBox("txtUsuario", "", htmlAttributes: new {
                @class = "form-control", @style = "width:100%", @placeholder = "Nombre", @id = "txtNombre"
            })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            @Html.Password("txtPasswd", "", htmlAttributes: new {
                @class = "form-control", @placeholder = "Contraseña", @id = "txtPasswd"
            })
        </div>
    </div>
    <div class="row">
        <div class="text-center col-md-12">
            <button type="submit" class="btn btn-primary">Ingresar&nbsp;
                <i class="glyphicon glyphicon-log-in"></i>
            </button>
        </div>
    </div>
    @*}*@
</form>


