            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        @using (Html.BeginForm("registraContacto", "Inicio", FormMethod.Post, htmlAttributes: new { @class = "well well-sm" })) {
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                @Html.TextBoxFor(model => model.Nombre, htmlAttributes: new { @class = "form-control", @placeholder = "Nombre" })
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                                @Html.TextBoxFor(model => model.Correo, htmlAttributes: new { @class = "form-control", @placeholder = "Correo electrónico" })
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-phone-alt"></span></span>
                                @Html.TextBoxFor(model => model.Telefono, htmlAttributes: new { @class = "form-control", @placeholder = "Teléfono para contactar" })
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-map-marker"></span></span>
                                @Html.TextBoxFor(model => model.Direccion, htmlAttributes: new { @class = "form-control", @placeholder = "Dirección o país/ciudad" })
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-comment"></span></span>
                                @Html.TextAreaFor(model => model.Comentario, htmlAttributes: new { @class = "form-control", @placeholder = "¿En qué te puedo ayudar?" })
                            </div>
                            <div class="input-group">
                                <input type="submit" class="btn btn-lg btn-primary" value="Enviar" />
                            </div>
                        }
                    </div>
